{
  "buildCommand": "npm install && cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/auth/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/templates/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/reports/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/users/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/logs/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/files/:path*",
      "destination": "/api/index"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
