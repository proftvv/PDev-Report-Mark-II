{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/auth/:path*",
      "destination": "/api"
    },
    {
      "source": "/templates/:path*",
      "destination": "/api"
    },
    {
      "source": "/reports/:path*",
      "destination": "/api"
    },
    {
      "source": "/users/:path*",
      "destination": "/api"
    },
    {
      "source": "/logs/:path*",
      "destination": "/api"
    },
    {
      "source": "/files/:path*",
      "destination": "/api"
    }
  ]
}
